#%Module1.0#####################################################################
##
## Armadillo modulefile
##
##
proc ModulesHelp { } {
	global armadilloversion

	puts stderr "\tSets varialbes for Armadillo library"
        puts stderr "\n\tSets PATH"
	puts stderr "\n\tSets LD_LIBRARY_PATH"
        puts stderr "\n\tSets CPUS_INCLUDE_PATH"
	puts stderr "\n\tVersion $armadilloversion\n"
}

module-whatis	"set environment for Armadillo library"

# for Tcl script use only
set	armadilloversion      7.200.2

if [info exists env(BASE_DIR) ] {
  set BaseDir $env(BASE_DIR)
} else {
  set BaseDir "/mnt/space/install"
}

prepend-path	LD_LIBRARY_PATH    "$BaseDir/packages/armadillo/7.200.2/lib"
prepend-path     CPLUS_INCLUDE_PATH "$BaseDir/packages/armadillo/7.200.2/include"
