proc ModulesHelp { } {
	global juliaversion

	puts stderr "\tSets varialbes for Julia"
  puts stderr "\n\tSets PATH"
	puts stderr "\n\tVersion $juliaversion\n"
}

module-whatis	"set environment for Octave"

# for Tcl script use only
set	juliaversion      0.4.6

if [info exists env(BASE_DIR) ] {
  set BaseDir $env(BASE_DIR)
} else {
  set BaseDir "/mnt/space/install"
}

# local variable to shoten the paths
set basepath "$BaseDir/packages/julia/$juliaversion"

prepend-path    PATH             "$basepath/bin"
prepend-path    LD_LIBRARY_PATH  "$basepath/lib"
