#%Module1.0#####################################################################
##
## Qwt modulefile
##
##
proc ModulesHelp { } {
	global qwtversion

	puts stderr "\tSets varialbes for Qwt library"
        puts stderr "\n\tSets PATH"
	puts stderr "\n\tSets LD_LIBRARY_PATH"
        puts stderr "\n\tSets CPLUS_INCLUDE_PATH"
	puts stderr "\n\tVersion $qwtversion\n"
}

module-whatis	"set environment for Qwt library"

# for Tcl script use only
set	qwtversion      6.1.3

if [info exists env(BASE_DIR) ] {
  set BaseDir $env(BASE_DIR)
} else {
  set BaseDir "/mnt/space/install"
}


setenv           QWT_VERSION     "$qwtversion"
setenv           QWT_DIR         "$BaseDir/packages/qwt/$qwtversion/"
prepend-path     LD_LIBRARY_PATH    "$BaseDir/packages/qwt/$qwtversion/lib"
prepend-path     CPLUS_INCLUDE_PATH "$BaseDir/packages/qwt/$qwtversion/include"
