proc ModulesHelp { } {
	global tengversion

	puts stderr "\tSets varialbes for Teng library"
        puts stderr "\n\tSets PATH"
	puts stderr "\n\tSets LD_LIBRARY_PATH"
        puts stderr "\n\tSets CPUS_INCLUDE_PATH"
	puts stderr "\n\tVersion $tengversion\n"
}

module-whatis	"set environment for Teng library"

# for Tcl script use only
set	tengversion      2.1.1

if [info exists env(BASE_DIR) ] {
  set BaseDir $env(BASE_DIR)
} else {
  set BaseDir "/mnt/space/install"
}

prepend-path    LD_LIBRARY_PATH    "$BaseDir/packages/teng/2.1.1/lib"
prepend-path    CPLUS_INCLUDE_PATH "$BaseDir/packages/teng/2.1.1/include"
